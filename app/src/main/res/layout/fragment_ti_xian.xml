<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dim"
    tools:context="baidu_ditu1.lenovo.example.com.awdawdas.dtanfgtiaxia.ui.caifu.TiXianFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_heightPercent="6.5%">

        <TextView
            android:text="转账银行"
            android:textSize="18dp"
            android:textColor="#f3292929"
            android:padding="8dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:background="@null"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:id="@+id/tixian_edit_yenhang"
            android:hint="请输入转账银行"
            android:ems="10"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="10%"
        app:layout_heightPercent="6.5%"
        android:background="@color/white">

        <TextView
            android:text="转账户名"
            android:textSize="18dp"
            android:textColor="#f3292929"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:background="@null"
            android:textSize="16dp"
            android:ems="10"
            android:id="@+id/tixian_edit_huming"
            android:hint="请输入转账户名"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        app:layout_marginTopPercent="18%"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="6.5%">

        <TextView
            android:text="银行卡号"
            android:textSize="18dp"
            android:textColor="#f3292929"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="19"
            android:layout_gravity="center"
            android:background="@null"
            android:textSize="16dp"
            android:ems="10"
            android:id="@+id/tixian_edit_kahao"
            android:hint="请输入银行卡号"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        app:layout_marginTopPercent="26%"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="6.5%">

        <TextView
            android:text="充值金额"
            android:textSize="18dp"
            android:textColor="#f3292929"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@null"
            android:textSize="16dp"
            android:ems="10"
            android:layout_gravity="center"
            android:id="@+id/tixian_edit_jine"
            android:hint="请输入充值金额"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tixian_button_quedin"
        android:textColor="@color/white"
        android:background="@drawable/selector_button_background"
        app:layout_widthPercent="70%"
        app:layout_heightPercent="7%"
        android:textSize="15dp"
        android:text="确定"
        android:layout_gravity="center|center_horizontal"
        />

</android.support.percent.PercentFrameLayout>
