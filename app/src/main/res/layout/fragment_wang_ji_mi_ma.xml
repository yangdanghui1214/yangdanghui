<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="baidu_ditu1.lenovo.example.com.awdawdas.dtanfgtiaxia.ui.denlu_xiangguan.WangJiMiMa"
    android:padding="30dp"
    android:background="@color/dim"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/wangji_mima_baijing"
        android:layout_marginTop="15dp"
        android:layout_height="45dp">

        <TextView
            android:textStyle="bold"
            android:text="手机号"
            android:textSize="17dp"
            android:layout_width="100dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <EditText
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="11"
            android:background="@null"
            android:ems="10"
            android:id="@+id/wangji_edit_shoji"
            android:layout_weight="1" />

        <TextView
        android:layout_marginTop="-3dp"
        android:background="#000000"
        android:alpha="0.1"
        android:layout_width="1dp"
        android:layout_height="25dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/wangji_mima_baijing"
        android:layout_marginTop="10dp"
        android:layout_height="45dp">

        <TextView
            android:textStyle="bold"
            android:singleLine="true"
            android:text="身份证号"
            android:textSize="17dp"
            android:layout_width="100dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <EditText
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入身份证号"
            android:inputType="number"
            android:maxLength="18"
            android:layout_gravity="center"
            android:background="@null"
            android:ems="10"
            android:id="@+id/wangji_edit_shenfenzhen"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/wangji_mima_baijing"
        android:layout_marginTop="10dp"
        android:layout_height="45dp">

        <TextView
            android:textStyle="bold"
            android:text="验证码"
            android:textSize="17dp"
            android:layout_width="109dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <EditText
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="请输入验证码"
            android:layout_gravity="center"
            android:background="@null"
            android:ems="10"
            android:id="@+id/wangji_edit_yenzhenma"
            android:layout_weight="15" />

        <TextView
            android:layout_marginTop="-3dp"
            android:background="#000000"
            android:alpha="0.1"
            android:layout_width="1dp"
            android:layout_height="25dp" />
        <TextView
            android:gravity="center"
            android:text="获取验证码"
            android:layout_width="90dp"
            android:textSize="13dp"
            android:layout_height="match_parent"
            android:id="@+id/wangji_yanzhenma" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/wangji_mima_baijing"
        android:layout_marginTop="10dp"
        android:layout_height="45dp">

        <TextView
            android:textStyle="bold"
            android:text="新密码"
            android:textSize="17dp"
            android:layout_width="100dp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/textView5" />

        <EditText
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="请输入新密码"
            android:layout_gravity="center"
            android:background="@null"
            android:maxLength="20"
            android:ems="10"
            android:id="@+id/wangji_edit_mima"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/wangji_mima_baijing"
        android:layout_marginTop="10dp"
        android:layout_height="45dp">

        <TextView
            android:textStyle="bold"
            android:text="确认密码"
            android:textSize="17dp"
            android:layout_width="100dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <EditText
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="请输入确认密码"
            android:layout_gravity="center"
            android:maxLength="20"
            android:background="@null"
            android:ems="10"
            android:id="@+id/wangji_edit_qren_mima"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="确认"
        android:textSize="18dp"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:background="@drawable/wode_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/wangji_button_qren" />
</LinearLayout>
