<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Mc.OneFragment">


    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="公司名称"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="15dp"
            android:hint="请输入公司名称"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/one_editText_gongsi_mingchen" />
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="营业执照"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/textView" />


        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="15dp"
            android:hint="请输入营业执照"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/one_editText_yenye_zhizhang" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="组织机构类型"
            android:layout_width="100dp"
            android:layout_height="match_parent" />




        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="15dp"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/one_editText_shojihang" />

        <TextView
            android:layout_marginTop="-3dp"
            android:background="#000000"
            android:alpha="0.1"
            android:layout_width="1dp"
            android:layout_height="25dp" />

        <TextView
        android:gravity="center"
        android:text="获取验证码"
        android:layout_width="90dp"
        android:textSize="13dp"
        android:layout_height="match_parent"
        android:id="@+id/one_text_yanzhenma" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:layout_width="100dp"
            android:layout_height="match_parent" />


        <EditText
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="15dp"
            android:hint="请输入验证码"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/one_editText_yanzhenma" />
    </LinearLayout>


    <Button
        android:textSize="@dimen/dimen_16"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/button_corners"
        android:text="确定"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/one_button_puedin" />

</LinearLayout>
