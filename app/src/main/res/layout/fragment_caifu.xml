<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CaifuFragment"
    android:background="#ededed"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/caifu_zhanghuyue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#29a90c"/>

        <TextView
            android:text="账户余额"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen"
            android:paddingTop="50dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/textView6" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGreen"
            android:paddingBottom="30dp">

            <TextView
                android:text="￥ "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/textView7" />
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textColor="@color/white"
                android:textSize="19dp"
                android:id="@+id/textView13"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#e8fff9fb"
                android:id="@+id/caifu_text_jifen"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cf_jifen"
                        android:paddingLeft="17dp"
                        android:id="@+id/imageView4" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:text="积分"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:id="@+id/textView10" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#e8fff9fb"
                android:id="@+id/caifu_text_gowu"
                android:layout_marginRight="3dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cf_gouwubi"
                        android:paddingLeft="15dp"
                        android:id="@+id/imageView3" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="5dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="购物币"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:id="@+id/textView91"
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/caifu_text_jingbi"
                android:background="#e8fff9fb">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cf_jingbi"
                        android:paddingLeft="17dp"
                        android:id="@+id/imageView5"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1">

                        <TextView
                            android:text="金币"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/caifu_text_zhuanzhuang"
                android:layout_height="95dp"
                android:gravity="center"
                android:background="#e8fff9fb">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/cf_zhuanzhuang"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingBottom="20dp"
                        android:paddingRight="5dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="转账"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textSize="16dp"
                            android:layout_weight="1"
                            android:gravity="center" />

                        <TextView
                            android:text="点击查看"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:textSize="18dp"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@color/white"
            android:padding="15dp"
            android:id="@+id/caifu_text_yenhangka"
            android:layout_weight="1"
            app:srcCompat="@drawable/cf_yenghangka" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_marginLeft="2dp"
            android:padding="15dp"
            android:id="@+id/caifu_text_shofukuan"
            android:layout_weight="1"
            app:srcCompat="@drawable/cf_shoufukuan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_marginLeft="2dp"
            android:padding="15dp"
            android:id="@+id/caifu_text_saoyisao"
            android:layout_weight="1"
            app:srcCompat="@drawable/cf_saoyisao" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            app:srcCompat="@drawable/cf_zhifumima"
            android:layout_alignTop="@+id/caifu_set_zhifumima"
            android:layout_toStartOf="@+id/caifu_set_zhifumima" />

        <TextView
            android:text="修改密码"
            android:textColor="#43e21f"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/caifu_set_zhifumima"
            android:layout_marginEnd="12dp" />

    </RelativeLayout>

</LinearLayout>
