<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:background="@drawable/linearlayout_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tuichu_twopopupwindow"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_clear_black_24dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="请输入支付密码"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />


        </LinearLayout>
        <TextView
            android:alpha="0.3"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#00aaff"/>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="人民币金额"
            android:textSize="19sp"
            android:id="@+id/textView3" />


        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="19sp"
            android:text="100.00"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:padding="8dp"
                android:onClick="true"
                android:id="@+id/image_one"
                android:background="@drawable/image_strok_mima"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:padding="8dp"
                android:onClick="true"
                android:id="@+id/image_two"
                android:background="@drawable/image_mima_center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:padding="8dp"
                android:onClick="true"
                android:id="@+id/image_three"
                android:background="@drawable/image_mima_center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:padding="8dp"
                android:onClick="true"
                android:id="@+id/image_four"
                android:background="@drawable/image_mima_center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:padding="8dp"
                android:onClick="true"
                android:id="@+id/image_five"
                android:background="@drawable/image_mima_center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:padding="8dp"
                android:onClick="true"
                android:id="@+id/image_six"
                android:background="@drawable/image_mima_right"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_wangjimima"
            android:textColor="#008000"
            android:layout_marginRight="40dp"
            android:gravity="right|center_vertical"
            android:text="忘记密码"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

    </LinearLayout>





</LinearLayout>