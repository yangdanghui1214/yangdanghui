<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="照相"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#53d2f2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/cela_zhaoxiang"
        android:textSize="18dp"
        android:id="@+id/cela_button_zhaoxiang" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"
        android:id="@+id/textView11" />

    <Button
        android:text="相册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#53d2f2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/cela_xiangce"
        android:textSize="18dp"
        android:id="@+id/cela_button_xiangce" />

    <Button
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#53d2f2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/cela_quxiao"
        android:textSize="18dp"
        android:id="@+id/cela_button_puxiao" />
</LinearLayout>